	<body>
		<div id="preloader">
		</div>
		<div id="main-content" style="opacity: 0;">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		font-family: 'Poppins', sans-serif;
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
		box-sizing: border-box;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	/* Estilos del scrollbar */
	::-webkit-scrollbar {
		width: 8px;
		height: 8px;
	}

	::-webkit-scrollbar-track {
		background: #f1f1f1;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb {
		background: #874fff;
		border-radius: 4px;
		transition: background 0.3s ease;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #6b3acc;
	}

	/* Para Firefox */
	html {
		scrollbar-width: thin;
		scrollbar-color: #874fff #f1f1f1;
	}

	#preloader {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 9999;
		transition: opacity 0.5s ease-out;
	}


	@keyframes spin {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	.loader p {
		margin: 0;
		font-size: 18px;
		font-weight: 500;
	}

	#main-content {
		transition: opacity 0.8s ease-in;
	}

	.fade-out {
		opacity: 0 !important;
		pointer-events: none;
	}

	.fade-in {
		opacity: 1 !important;
	}
</style>

<script>
	window.addEventListener('load', function() {
		// Esperar un poco más para asegurar que todas las animaciones estén listas
		setTimeout(() => {
			const preloader = document.getElementById('preloader');
			const mainContent = document.getElementById('main-content');
			
			// Ocultar preloader
			preloader.classList.add('fade-out');
			
			// Mostrar contenido principal
			mainContent.classList.add('fade-in');
			
			// Remover preloader del DOM después de la transición
			setTimeout(() => {
				preloader.style.display = 'none';
			}, 500);
		}, 300);
	});
</script>
