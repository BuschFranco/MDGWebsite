---
// Backstage.astro - Componente de página de contacto
---

<section class="backstage-section">
  <!-- Header con logo -->
  <div class="header">
    <h1 class="logo">
      <span class="backstage">Backstage</span>
      <span class="mag">.mag</span>
    </h1>
  </div>

  <div class="carrousel-phone">

     <div class="phone-container">
        <div class="frame-wrapper">
        <img src="iphoneframe.png" alt="iphone frame" class="iphone-frame">
        <img src="linkedin.png" alt="Linkedin Logo" class="linkedin-logo">
        </div>
    </div>
  </div>
 

  

<style>
  /* Estilos del phone container */
  .phone-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 3rem 0;
  }

  .frame-wrapper {
    position: relative;
    width: fit-content;
  }

  .linkedin-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: auto;
    z-index: 1;
  }


</style>



  <!-- Sección de contacto -->
  <div class="contact-section">
    <div class="contact-text">
      <h2>We are waiting for you to contact us ;)</h2>
    </div>
    
    <div class="contact-form">
      <form class="form">
        <div class="form-group">
          <label for="name">NAME</label>
          <input type="text" id="name" name="name" required>
        </div>
        
        <div class="form-group">
          <label for="email">EMAIL</label>
          <input type="email" id="email" name="email" required>
        </div>
        
        <div class="form-group">
          <label for="message">MESSAGE</label>
          <textarea id="message" name="message" rows="4" required></textarea>
        </div>
        
        <button type="submit" class="submit-btn">SUBMIT</button>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      
      <div class="footer-text">
        <div class="footer-logos">
            <img src="googlelogo.png" alt="Google Logo">
            <img src="tiktoklogo.png" alt="TikTok Logo">
            <img src="MEFlogo.png" alt="MEF Logo">
        </div>
        <p>© 2025 Cookies, Inc. All rights reserved.</p>
        <p>Av. Ruiz Huidobro 2997 | Buenos Aires, Argentina</p>
      </div>
      
      <div class="footer-links">
        <a href="#">Terms & Conditions</a>
        <a href="#">Privacy & Policy</a>
        <a href="#">Cookies Policy</a>
      </div>
    </div>
  </footer>
</section>

<style>
  .backstage-section {
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    padding: 3rem 2rem;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .logo {
    font-size: 2.5rem;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.5px;
  }

  .backstage {
    color: #00d4aa;
  }

  .mag {
    color: #6366f1;
  }

   .iphone-frame {
    display: block;
    margin: 0 auto;
    max-width: 280px;
    height: auto;
    padding: 1rem;
  }

  .contact-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    max-width: 1000px;
    margin: 0 auto 6rem;
    align-items: center;
  }

  .contact-text h2 {
    font-size: 2.2rem;
    color: #2a2a2a;
    line-height: 1.3;
    margin: 0;
    font-weight: 600;
  }

  .form {
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  .form-group {
    margin-bottom: 1.8rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.8rem;
    font-weight: 600;
    color: #555;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.8px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0ea5e9;
    box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
  }

  .submit-btn {
    width: 100%;
    padding: 1.2rem;
    background: #0ea5e9;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .submit-btn:hover {
    background: #0284c7;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: end;
    max-width: 1000px;
    margin: 0 auto;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-text {
    text-align: start;
    color: #6b7280;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .footer-logos{
    margin-bottom: 1rem;
  }

  .footer-logos img{
    width: 4.5rem;

    &:last-child {
     width: 11rem;
    }

   &:not(:last-child){
    margin-right: 1.5rem;
   } 
  }

  .footer-text p {
    margin: 0.2rem 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.85rem;
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .footer-links a:hover {
    color: #0ea5e9;
  }

  @media (max-width: 768px) {
    .backstage-section {
      padding: 2rem 1rem;
    }
    
    .header {
      margin-bottom: 3rem;
    }
    
    .logo {
      font-size: 2rem;
    }
    
    .main-content {
      flex-direction: column;
      gap: 3rem;
      align-items: center;
    }
    
    .content-gallery {
      grid-template-columns: repeat(2, 100px);
      grid-template-rows: repeat(3, 70px);
      gap: 0.6rem;
      justify-self: center;
    }
    
    .content-text {
      font-size: 0.6rem;
    }
    
    .phone-container {
      margin: 2rem 0;
    }
    
    .iphone-frame {
      max-width: 220px;
    }
    

    
    .phone-frame {
      width: 150px;
      height: 280px;
      padding: 12px;
    }
    
    .contact-section {
      grid-template-columns: 1fr;
      gap: 3rem;
      margin-bottom: 4rem;
    }
    
    .contact-text h2 {
      font-size: 1.8rem;
      text-align: center;
    }
    
    .form {
      padding: 2rem;
    }
    
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
    
    .footer-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>