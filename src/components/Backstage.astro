</section>

<script>
  // JavaScript para el carrusel automático
  document.addEventListener('DOMContentLoaded', function() {
    const carouselTrack = document.querySelector('.carousel-track');
    const carouselItems = document.querySelectorAll('.carousel-item');
    let currentIndex = 0;

    function rotateCarousel() {
      // Remover clase active de todos los elementos
      carouselItems.forEach(item => item.classList.remove('active'));
      
      // Agregar clase active al elemento actual
      carouselItems[currentIndex].classList.add('active');
      
      // Mover el track para centrar el elemento activo (centrar en el elemento del medio)
      const translateX = -(currentIndex * 20) + 40; // Offset para centrar
      carouselTrack.style.transform = `translateX(${translateX}%)`;
      
      // Incrementar índice
      currentIndex = (currentIndex + 1) % carouselItems.length;
    }

    // Inicializar con el tercer elemento activo y centrado
    if (carouselItems.length > 0) {
      currentIndex = 2; // Comenzar en el elemento 3 (índice 2)
      carouselItems[currentIndex].classList.add('active');
      const translateX = -(currentIndex * 20) + 40;
      carouselTrack.style.transform = `translateX(${translateX}%)`;
    }

    // Rotar cada 3 segundos
    setInterval(rotateCarousel, 3000);
  });
</script>

<style>
  .backstage-section {
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    padding: 0 2rem 3rem 2rem;
  }

  .header {
    text-align: center;
