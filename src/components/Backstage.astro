<style>
  /* Estilos del phone container */
  .phone-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 3rem 0 0rem 0;
  }

  .frame-wrapper {
    position: relative;
    width: fit-content;
  }

  /* Estilos del carrusel automático */
   .carousel-container {
     position: absolute;
     top: 38%;
     left: 50%;
     transform: translate(-50%, -50%);
     width: 60rem;
     height: auto;
     overflow: visible;
     z-index: 1;
     display: flex;
     align-items: center;
     justify-content: center;
   }
 
   .carousel-track {
     display: flex;
     align-items: center;
     justify-content: center;
     width: 500%;
     height: 100%;
     position: relative;
     transition: transform 0.8s ease-in-out;
   }
 
   .carousel-item {
     flex: 0 0 20%;
     display: flex;
     align-items: center;
     justify-content: center;
     opacity: 0.4;
     filter: blur(1.5px);
     transform: scale(0.7);
     transition: all 0.8s ease-in-out;
     z-index: 1;
   }
 
   .carousel-item.active {
     opacity: 1;
     filter: blur(0);
     transform: scale(1);
     z-index: 2;
   }
 
   .carousel-item img {
      width: 25rem;
      height: 25rem;
      object-fit: cover;
      border-radius: 2rem;
      box-shadow: 0 0 18px rgba(0, 0, 0, 0.61);
      transition: all 0.8s ease-in-out;
    }

   .carousel-item.active img {
      width: 31rem;
      height: 31rem;
    }

  /* Animación automática */
  @keyframes carousel-rotate {
    0% { opacity: 0.3; filter: blur(2px); transform: scale(0.8); }
    20% { opacity: 1; filter: blur(0); transform: scale(1); }
    80% { opacity: 1; filter: blur(0); transform: scale(1); }
    100% { opacity: 0.3; filter: blur(2px); transform: scale(0.8); }
  }
</style>



  <!-- Sección de contacto -->
  <div class="contact-section">
    <div class="contact-text">
      <h2 data-translate="contact.title">We are waiting for you to contact us ;)</h2>
    </div>
    
    <div class="contact-form">
      <form class="form">
        <div class="form-group">
          <label for="name" data-translate="contact.form.name">NAME</label>
