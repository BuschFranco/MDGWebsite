---
// Backstage.astro - Componente de página de contacto
---

<section class="backstage-section">
  <!-- Header con logo -->
  <div class="header">
    <h1 class="logo">
      <span class="backstage">Backstage</span>
      <img src="logo.png" alt="MDG Logo">
    </h1>
  </div>

  <div class="carrousel-phone">

     <div class="phone-container">
        <div class="frame-wrapper">
        <img src="iphoneframe.png" alt="iphone frame" class="iphone-frame">
        <img src="linkedin.png" alt="Linkedin Logo" class="linkedin-logo">
        </div>
    </div>
  </div>
 

  

<style>
  /* Estilos del phone container */
  .phone-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 3rem 0;
  }

  .frame-wrapper {
    position: relative;
    width: fit-content;
  }

  .linkedin-logo {
    position: absolute;
    top: 65%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: auto;
    z-index: 1;
  }
</style>



  <!-- Sección de contacto -->
  <div class="contact-section">
    <div class="contact-text">
      <h2 data-translate="contact.title">We are waiting for you to contact us ;)</h2>
    </div>
    
    <div class="contact-form">
      <form class="form">
        <div class="form-group">
          <label for="name" data-translate="contact.form.name">NAME</label>
          <input type="text" id="name" name="name" placeholder="Enter your name" data-translate-placeholder="contact.form.name_placeholder" required>
        </div>
        
        <div class="form-group">
          <label for="email" data-translate="contact.form.email">EMAIL</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" data-translate-placeholder="contact.form.email_placeholder" required>
        </div>
        
        <div class="form-group">
          <label for="message" data-translate="contact.form.message">MESSAGE</label>
          <textarea id="message" name="message" rows="2" placeholder="Enter your message" data-translate-placeholder="contact.form.message_placeholder" required></textarea>
        </div>
        
        <button type="submit" class="submit-btn" data-translate="contact.form.submit">SUBMIT</button>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      
      <div class="footer-text">
        <div class="footer-logos">
            <img src="googlelogo.png" alt="Google Logo">
            <img src="tiktoklogo.png" alt="TikTok Logo">
            <img src="MEFlogo.png" alt="MEF Logo">
        </div>
        <p>© 2025 Cookies, Inc. All rights reserved.</p>
        <p>Av. Ruiz Huidobro 2997 | Buenos Aires, Argentina</p>
      </div>
      
      <div class="footer-links">
        <a href="#">Terms & Conditions</a>
        <a href="#">Privacy & Policy</a>
        <a href="#">Cookies Policy</a>
      </div>
    </div>
  </footer>
</section>

<style>
  .backstage-section {
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    padding: 3rem 2rem;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    font-size: 6.5rem;
    font-weight: 500;
    margin: 0;
    letter-spacing: -0.5px;
  }.logo img{
    width: 16rem;
    margin-top: 1.5rem;
  }

  .backstage {
    color: rgba(36, 203, 113, 1);
  }

  .mag {
    color: #6366f1;
  }

   .iphone-frame {
    display: block;
    margin: 0 auto;
    max-width: 30rem;
    height: auto;
    padding: 1rem;
  }

  .contact-section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 6rem;
    max-width: 1000px;
    margin: 0 auto 6rem;
    align-items: start;
  }

  .contact-text h2 {
    font-size: 2.4rem;
    color: #2a2a2a;
    line-height: 1.3;
    margin: 0;
    font-weight: 500;
  }

  .form {
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  .form-group {
    margin-bottom: 2.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
    font-size: 1.3rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.2rem 0;
    border: none;
    border-bottom: 2px solid #e0e0e0;
    background: transparent;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-sizing: border-box;
    outline: none;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-bottom-color: #1976d2;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 80px;
  }

  .submit-btn {
    width: 100%;
    padding: 1.2rem;
    background: #1976d2;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 1rem;
  }

  .submit-btn:hover {
    background: #1565c0;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(25, 118, 210, 0.3);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: end;
    max-width: 1000px;
    margin: 0 auto;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-text {
    text-align: start;
    color: #6b7280;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .footer-logos{
    margin-bottom: 1rem;
  }

  .footer-logos img{
    width: 4.5rem;

    &:last-child {
     width: 11rem;
    }

   &:not(:last-child){
    margin-right: 1.5rem;
   } 
  }

  .footer-text p {
    margin: 0.2rem 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.85rem;
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .footer-links a:hover {
    color: #0ea5e9;
  }

  @media (max-width: 1024px) {
    .backstage-section {
      padding: 2.5rem 1.5rem;
    }
    
    .logo {
      font-size: 4rem;
      gap: 2rem;
    }
    
    .logo img {
      width: 12rem;
    }
    
    .contact-section {
      gap: 4rem;
    }
    
    .contact-text h2 {
      font-size: 2rem;
    }
    
    .iphone-frame {
      max-width: 250px;
    }
  }
  
  @media (max-width: 768px) {
    .backstage-section {
      padding: 2rem 1rem;
    }
    
    .header {
      margin-bottom: 3rem;
    }
    
    .logo {
      font-size: 3rem;
      gap: 1.5rem;
      flex-direction: column;
    }
    
    .logo img {
      width: 10rem;
      margin-top: 0;
    }
    
    .phone-container {
      margin: 2rem 0;
    }
    
    .iphone-frame {
      max-width: 220px;
    }
    
    .contact-section {
      grid-template-columns: 1fr;
      gap: 3rem;
      margin-bottom: 4rem;
    }
    
    .contact-text h2 {
      font-size: 1.8rem;
      text-align: center;
    }
    
    .form {
      padding: 2rem;
    }
    
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
    
    .footer-links {
      flex-direction: column;
      gap: 1rem;
    }
    
    .footer-logos img {
      width: 3.5rem;
      
      &:last-child {
        width: 9rem;
      }
    }
  }
  
  @media (max-width: 480px) {
    .backstage-section {
      padding: 1.5rem 0.8rem;
    }
    
    .header {
      margin-bottom: 2rem;
    }
    
    .logo {
      font-size: 2.5rem;
      gap: 1rem;
      flex-direction: column;
    }
    
    .logo img {
      width: 8rem;
      margin-top: 0;
    }
    
    .phone-container {
      margin: 1.5rem 0;
    }
    
    .iphone-frame {
      max-width: 180px;
    }
    
    .contact-section {
      gap: 2rem;
      margin-bottom: 3rem;
    }
    
    .contact-text h2 {
      font-size: 1.5rem;
    }
    
    .form {
      padding: 1.5rem;
    }
    
    .form-group input,
    .form-group textarea {
      padding: 0.8rem;
      font-size: 0.9rem;
    }
    
    .submit-btn {
      padding: 1rem;
      font-size: 0.9rem;
    }
    
    .footer-logos img {
      width: 3rem;
      
      &:last-child {
        width: 7rem;
      }
    }
  }
  
  @media (max-width: 320px) {
    .backstage-section {
      padding: 1rem 0.5rem;
    }
    
    .logo {
      font-size: 2rem;
      gap: 0.8rem;
      flex-direction: column;
    }
    
    .logo img {
      width: 6rem;
      margin-top: 0;
    }
    
    .iphone-frame {
      max-width: 150px;
    }
    
    .contact-text h2 {
      font-size: 1.3rem;
    }
    
    .form {
      padding: 1rem;
    }
    
    .footer-logos img {
      width: 2.5rem;
      
      &:last-child {
        width: 6rem;
      }
    }
  }
</style>